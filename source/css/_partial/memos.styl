#memos-page
  h1
    margin-bottom: 2rem
    color: $color-accent-1
  
  .post-list
    padding: 0
    
    .post-item
      margin-bottom: 3rem
      margin-left: 0
      list-style-type: none
      
      .meta
        display: block
        margin-bottom: 0.5rem
        color: $color-meta
        font-size: 14px
      
      span
        line-height: 1.725
        
        p
          margin: 0.5rem 0
          
          &:first-child
            margin-top: 0
          
          &:last-child
            margin-bottom: 0
        
        img
          max-width: 100%
          max-height: 250px
          border-radius: 4px
          margin: 0.5rem 0

  #page-nav
    margin-top: 3rem
    padding-top: 2rem
    text-align: center
    
    .extend
      display: inline-block
      margin: 0 1rem
      color: $color-link
      text-decoration: none
      
      &:hover
        color: $color-accent-1
    
    .page-number
      display: inline-block
      margin: 0 1rem
      color: $color-meta
      font-size: 14px

#memo
  .article-header
    .article-meta
      color: $color-meta
      font-size: 14px
      margin-bottom: 1rem
  
  .article-entry
    line-height: 1.725
    
    p
      margin: 1rem 0
      
      &:first-child
        margin-top: 0
    
    img
      max-width: 100%
      max-height: 250px
      border-radius: 4px
      margin: 0.5rem 0

// 首页 memos 区域
#memos
  .post-list
    .post-item
      span
        img
          max-width: 100%
          max-height: 250px
          border-radius: 4px
          margin: 0.5rem 0
